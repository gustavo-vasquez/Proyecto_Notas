@model ProbandoTodo.Models.ProfileManagementModels.AvatarSectionViewModel

<div id="AvatarDialog" class="row">
    <div class="col-md-6 text-center">
        @*<img class="img-center img-responsive img-circle" src="https://images.playfulbet.com/system/uploads/user/avatar/3537465/homero_pikachu.jpg" width="200" height="200" alt="current_avatar" />*@
        <img id="CurrAvatar" class="img-center img-responsive img-rounded" src="@Model.AvatarSource" width="200" height="200" alt="current_avatar" />
        @Html.TextBoxFor(m => m.UploadAvatar, new { type = "file", @class = "hide" })
        <label class="btn btn-lg btn-primary" for="UploadAvatar">Cambiar imágen</label>
    </div>
    <div class="col-md-6">
        <p>· Debe tener extensión JPG, JPEG, GIF o PNG</p>
        <p>· No debe tener un tamaño superior a 2mb</p>
        <div class="col-md-6 text-center">
            <img class="img-center img-responsive img-rounded default-avatar" src="~/Content/Images/monkey.png" width="100" height="100" alt="current_avatar" />
            <label id="ResetAvatar" class="btn btn-sm btn-primary">Por defecto</label>
        </div>        
        <div class="col-md-6 text-center">
            <img class="img-center img-responsive img-rounded" src="https://images.playfulbet.com/system/uploads/user/avatar/3537465/homero_pikachu.jpg" width="100" height="100" alt="current_avatar" />
            <label class="btn btn-sm btn-primary" for="pepe">Deshacer</label>
        </div>  
    </div>
</div>