@{
    ViewBag.Title = "ProfileWizard";
}

@section custom_scripts {
        @Scripts.Render("~/Scripts/application/themeWizard.js")
    }

<div class="panel panel-success wizardWrapper">    
    <div class="panel-heading">
        <h3 class="text-uppercase">Personalizar mi perfil</h3>
    </div>
    <div id="PanelContainer" class="panel-body" style="background-color: rgba(224, 239, 238, 0.58) !important; min-height: 377px;">
        @Html.Partial("~/Views/User/_ThemeDialog.cshtml")
    </div>
    <div class="panel-footer">
        <div class="text-right">
            <button type="button" id="PrevBtn" class="btn btn-success"><span class="glyphicon glyphicon-arrow-left"></span> Anterior</button>
            <button type="button" id="NextBtn" class="btn btn-success"><span class="glyphicon glyphicon-arrow-right"></span> Siguiente</button>
            <button type="button" id="EndBtn" class="btn btn-danger" style="display: none;"><span class="glyphicon glyphicon-check"></span> Finalizar</button>                
        </div>
    </div>
</div>

<style>
    .theme {
        padding: 15px 15px 15px 15px;
        border: 1px solid seagreen;
        border-radius: 3px;
    }

    .theme:hover, .theme-select {
        background-color: white;
        border: 2px solid seagreen;
    }

    .img-center {
        position: relative;
        margin: auto;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;      
        margin-top: 30px;  
        margin-bottom: 30px;
        max-width: 100%;
    }

    #AvatarDialog > div {
        padding-top: 20px;
    }

    .color-box-wizard {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        vertical-align: middle;
        cursor: pointer;
        color: white;
        text-align: center;        
        margin: 10px 10px 10px 10px;
    }

    .action-area {
        padding-top: 10px;
    }
</style>